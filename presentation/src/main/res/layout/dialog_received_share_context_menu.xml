<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.linagora.android.linshare.functionality.FunctionalityObserver"/>
        <import type="com.linagora.android.linshare.view.action.CopyInMySpaceContextMenu"/>
        <import type="com.linagora.android.linshare.view.action.DownloadItemContextMenu"/>
        <import type="com.linagora.android.linshare.view.receivedshares.ReceivedShareItemContextMenu"/>
        <import type="com.linagora.android.linshare.view.receivedshares.action.ReceivedSharesCopyToContextMenu"/>
        <import type="com.linagora.android.linshare.view.base.CopyToContextMenu"/>
        <import type="com.linagora.android.linshare.domain.model.share.Share"/>

        <variable
            name="functionalityObserver"
            type="FunctionalityObserver" />

        <variable
            name="contextMenu"
            type="ReceivedShareItemContextMenu" />

        <variable
            name="downloadContextMenu"
            type="DownloadItemContextMenu&lt;Share&gt;" />

        <variable
            name="copyInMySpaceContextMenu"
            type="CopyInMySpaceContextMenu&lt;Share&gt;" />

        <variable
            name="copyToContextMenu"
            type="CopyToContextMenu&lt;Share&gt;" />

        <variable
            name="share"
            type="Share" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_top_bottom_sheet"
        android:paddingBottom="@dimen/padding_top_bottom_sheet">

        <include
            android:id="@+id/shareInfoContainer"
            layout="@layout/header_received_share_info_container"
            bind:share="@{share}"/>

        <View
            android:layout_marginTop="@dimen/padding_top_bottom_sheet"
            style="@style/DivideView"
            app:layout_constraintTop_toBottomOf="@id/shareInfoContainer" />

        <LinearLayout
            style="@style/RowLinerBottomSheetStyle"
            android:onClick="@{() -> copyInMySpaceContextMenu.copyInMySpace(share)}">
            <ImageView
                style="@style/ImageInRowLinerBottomSheetStyle"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_copy" />

            <TextView
                style="@style/TextInRowLinerBottomSheetStyle"
                android:text="@string/copy_to_my_space" />
        </LinearLayout>

        <LinearLayout
            style="@style/RowLinerBottomSheetStyle"
            android:onClick="@{() -> downloadContextMenu.download(share)}">

            <ImageView
                style="@style/ImageInRowLinerBottomSheetStyle"
                android:src="@drawable/ic_download" />

            <TextView
                style="@style/TextInRowLinerBottomSheetStyle"
                android:text="@string/download_to_device" />

        </LinearLayout>

        <LinearLayout
            style="@style/RowLinerBottomSheetStyle"
            app:workGroupContextActionVisibleWithFunctionality="@{functionalityObserver.allFunctionality}"
            android:onClick="@{() -> copyToContextMenu.copyTo(share)}">
            <ImageView
                style="@style/ImageInRowLinerBottomSheetStyle"
                android:src="@drawable/ic_shared_space_item" />

            <TextView
                style="@style/TextInRowLinerBottomSheetStyle"
                android:text="@string/copy_to_a_workgroup" />
        </LinearLayout>

        <LinearLayout
            style="@style/RowLinerBottomSheetStyle"
            android:onClick="@{() -> contextMenu.details(share)}">
            <ImageView
                style="@style/ImageInRowLinerBottomSheetStyle"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_detail" />

            <TextView
                style="@style/TextInRowLinerBottomSheetStyle"
                android:text="@string/details" />
        </LinearLayout>
    </LinearLayout>
</layout>
