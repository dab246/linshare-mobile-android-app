<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.linagora.android.linshare.view.action.DownloadItemContextMenu"/>
        <import type="com.linagora.android.linshare.domain.model.sharedspace.WorkGroupDocument"/>

        <variable
            name="downloadContextMenu"
            type="DownloadItemContextMenu&lt;WorkGroupDocument&gt;" />

        <variable
            name="workGroupDocument"
            type="WorkGroupDocument" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_top_bottom_sheet"
        android:paddingBottom="@dimen/padding_top_bottom_sheet">

        <include
            android:id="@+id/workGroupDocumentInfoContainer"
            layout="@layout/header_work_group_document_info_container"
            bind:workGroupDocument="@{workGroupDocument}"/>

        <View
            android:layout_marginTop="@dimen/padding_top_bottom_sheet"
            style="@style/DivideView"
            app:layout_constraintTop_toBottomOf="@id/workGroupDocumentInfoContainer" />

        <LinearLayout
            style="@style/RowLinerBottomSheetStyle"
            android:onClick="@{() -> downloadContextMenu.download(workGroupDocument)}">

            <ImageView
                style="@style/ImageInRowLinerBottomSheetStyle"
                android:src="@drawable/ic_download" />

            <TextView
                style="@style/TextInRowLinerBottomSheetStyle"
                android:text="@string/download_to_device" />

        </LinearLayout>
    </LinearLayout>
</layout>
